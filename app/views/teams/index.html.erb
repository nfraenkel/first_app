<h1>Listing teams</h1>

<button type="button" id="helpButton">Need help?</button>

<br/>

<p id="helpText">Click on a team to try and find yourself!</p>

<br/>

<table>
  <tr>
    <th>Name</th>
    <th>Games played</th>
    <th>Wins</th>
    <th>Losses</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.games_played %></td>
    <td><%= team.wins %></td>
    <td><%= team.losses %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %><br /><br />

<%= link_to 'View Players', players_path %>

<style>
  p#helpText{
      display:none;
  }
</style>

<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script>
$(function() {
   var $help = $("#helpButton");
   var $content = $("#helpText");

   $help.click(function() {
       if ($content.is(":visible")) {
           $content.fadeOut('slow', function() {
              $help.text("Need help?");
           });
       }
       else {
           $content.fadeIn('slow', function() {
               $help.text("Hide help");
           });
       }
    });

});
</script>
