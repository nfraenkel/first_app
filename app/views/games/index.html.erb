<h1>Listing games</h1>

<table>
  <tr>
    <th>Team1</th>
    <th>Team2</th>
    <th>Team1score</th>
    <th>Team2score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.team1 %></td>
    <td><%= game.team2 %></td>
    <td><%= game.team1score %></td>
    <td><%= game.team2score %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

