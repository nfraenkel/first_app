<h1>Listing players</h1>

<table>
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Team</th>
    <th>Games played</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Shots</th>
    <th>Tackles</th>
    <th>Blocks</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.first %></td>
    <td><%= player.last %></td>
    <td><%= player.team %></td>
    <td><%= player.games_played %></td>
    <td><%= player.goals %></td>
    <td><%= player.assists %></td>
    <td><%= player.shots %></td>
    <td><%= player.tackles %></td>
    <td><%= player.blocks %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

